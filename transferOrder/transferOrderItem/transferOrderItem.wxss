page{ 
 height: 100%; 
 background-color: #f2f2f2
} 

.hide{
  display:none
}

.container { 
 height: 75rpx; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
 background-color: #f2f2f2
} 
/*接收到的数据*/
.message {
	width: 750rpx;
	color: black;
  background: white;
	line-height: 50rpx;
	text-align: center;
}
 
/*按钮*/
.loginBtnView { 
 width: 750rpx; 
 height: auto; 
 background-color: #f2f2f2; 
 margin-top: 0px; 
 margin-bottom: 0px; 
 margin-left: 0px; 
 padding-bottom: 0px; 
} 
  
.loginBtn { 
 width: 500rpx; 
 margin-top: 10rpx; 
}

