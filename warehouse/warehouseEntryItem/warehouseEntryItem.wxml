  <view class="item">
		<view class="title">生产日期</view>
		<view class="subtitle">
			<input type="text" name="manufactureDate" value="{{item.manufactureDate}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">失效日期</view>
		<view class="subtitle">
			<input type="text" name="expiryDate" value="{{item.expiryDate}}" placeholder="" />
		</view>
	</view>
