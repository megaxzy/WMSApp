
<view class="container"> 
  <!--decode="{{true}}" 后面的&nbsp才能用-->
  <view class="message">模式:入库扫码模式</view>
  <view class="line">' '</view>
  <view class="message">
    <text decode="{{true}}">用户名：{{name}} &nbsp;&nbsp;职业：{{role}}</text>
  </view>

  <view class="line">' '</view>

  <!--按钮-->
  <view class="loginBtnView"> 
    <button class="loginBtn" type="primary" bindtap="scan">扫码</button> 
  </view> 


<form > <!--onsubmit="add"-->
<view class="form">
	<view class="item">
		<view class="title" style="	text-align: center;">入库单条目信息</view>
    <view class="line">' '</view> 
    <!--wx:for 完了 用item表示每项-->
		<view class="subtitle" wx:for="{{warehouseEntry_list.data}}" wx:if="{{item.supplierId==supplier_id}}" bindtap="chose" hover-class="subtitle_press"  data-index="{{index}}">
      <view class="subtitle">
        <view style="color:red;display:flex;flex-direction:row;">入库单号：
          <view style="color:black;display:flex;flex-direction:row;" >{{item.no}}</view>
        </view>
        创建时间：{{item.createTime}}
        <text decode="{{true}}">\n</text>
        供应商名称：{{supplier_name}}
        <text decode="{{true}}">\n</text>
        最后修改时间：{{item.lastUpdateTime}}
        <text decode="{{true}}">\n</text>
        状态：{{item.state}}（0待入库  1送检中  2.全部入库  3.部分入库）
      </view>
      <view class="line">' '</view>
    </view>
	</view>
</view>
</form>


		<view class="subtitle" wx:for="{{warehouse_entry_item.data}}" bindtap="choseEntryItem" hover-class="subtitle_press" data-index="{{index}}">
      <view class="subtitle">
        <view style="color:red;display:flex;flex-direction:row;">{{index+1}}
        </view>
        供应商名称：{{warehouse_entry_item_mapped_supplier[index]}}
        <text decode="{{true}}">\n</text>
        物料名称：{{warehouse_entry_item_mapped_material[index]}}
        <text decode="{{true}}">\n</text>
        存货日期：{{item.inventoryDate}}
        <text decode="{{true}}">\n</text>
        状态：{{item.state==0 ? '待入库':''+ item.state==1 ? '送检中':'' + item.state==2 ? '正品入库':''+ item.state==3 ? '不良品入库':''}}
        <text decode="{{true}}">\n</text>
        备注：{{item.comment==null ? '':'' + item.comment}}
      </view>
    
<view class="{{hide[index] == true ?  'hide' : ''}}">
	<view class="item">
    <view class="title" style="color:blue; 	text-align: center;">送检单条目信息(第{{index+1}}项)</view>
  </view>
  <view class="item">
		<view class="title">实收数量</view>
		<view class="subtitle_disabled">
			<input type="number" name="realAmount" value="{{item.realAmount}}" placeholder="" />
      <!--warehouse_entry_item.data[index].realAmount-->
		</view>
	</view>


  <view class="item">
		<view class="title" >入库库位名称</view>
		<view class="subtitle">
			<input type="number" name="storageLocationName" value="{{warehouse_entry_item_mapped_entry_storage_location_name[index]}}" placeholder="" />
		</view>
	</view> 

  <view class="item">
		<view class="title" >合格品库位名称</view>
		<view class="subtitle">
			<input type="number" name="qualifiedLocationName" value="{{warehouse_entry_item_mapped_qualified_storage_location_name[index]}}" placeholder="" />
		</view>
	</view> 

  <view class="item">
		<view class="title" >不良品库位名称</view>
		<view class="subtitle">
			<input type="number" name="unqualifiedLocationName" value="{{warehouse_entry_item_mapped_unqualified_storage_location_name[index]}}" placeholder="" />
		</view>
	</view> 

  <view class="item">
		<view class="title">订单数量</view>
		<view class="subtitle"> 
			<input type="number" name="expectedAmount" value="{{item.expectedAmount}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">实收数量</view>
		<view class="subtitle">
			<input type="number" name="realAmount" value="{{item.realAmount}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">单位</view>
		<view class="subtitle">
			<input type="text" name="unit" value="{{item.unit}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">单位数量</view>
		<view class="subtitle">
			<input type="number" name="unitAmount" value="{{item.unitAmount}}" placeholder="" />
		</view>
	</view>  
    <view class="item">
		<view class="title">拒收数量</view>
		<view class="subtitle">
			<input type="number" name="refuseAmount" value="{{item.refuseAmount}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">拒收单位</view>
		<view class="subtitle">
			<input type="text" name="refuseUnit" value="{{item.refuseUnit}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">拒收单位数量</view>
		<view class="subtitle">
			<input type="number" name="refuseUnitAmount" value="{{item.refuseAmount}}" placeholder="" />
		</view>
	</view>  
  <view class="item">
		<view class="title">已送检数量</view>
		<view class="subtitle">
			<input type="number" name="inspectionAmount" value="{{item.inspectionAmount}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">状态（0待入库 1送检中 2正品入库 3不良品入库）</view>
		<view class="subtitle">
			<input type="number" name="state" value="{{item.state}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">存货日期</view>
		<view class="subtitle">
			<input type="text" disabled="true" name="inventoryDate" value="{{item.inventoryDate}}" placeholder="" />
		</view>
	</view>
  <!--TODO-->
  <view class="item">
		<view class="title">生产日期</view>
		<view class="subtitle">
			<input type="text" name="manufactureDate" value="{{item.manufactureDate}}" placeholder="" />
		</view>
	</view>
  <view class="item">
		<view class="title">失效日期</view>
		<view class="subtitle">
			<input type="text" name="expiryDate" value="{{item.expiryDate}}" placeholder="" />
		</view>
	</view>
  <!--
  <view class="item">
		<view class="title">作业人名称</view>
		<view class="subtitle">
			<input type="text" disabled="true" name="uaerName" value="{{item.name}}" placeholder="" />
		</view>
	</view>
  -->
  <view class="item">
		<view class="title">备注</view>
		<view class="subtitle">
			<input type="text" name="comment" value="{{item.comment}}" placeholder="" />
		</view>
	</view>
</view>
</view>
<view class="line_white"><text decode="{{true}}">\n</text></view>

</view>