<form > <!--onsubmit="add"-->
<view class="form">
	<view class="item">
		<view class="title" style="	text-align: center;">选择要修改的 出库单条目信息</view>
    <view class="line">' '</view> 
    <!--wx:for 完了 用item表示每项-->
    <!--这个地方是不是应该待入库的显示???-->
		<view class="subtitle" wx:for="{{delivery_order_item_list.data}}" wx:if="{{item.supplyId==supply.id && (item.state==1 || item.state==0)}}" bindtap="chose" hover-class="subtitle_press" hover-stay-time="3000" data-index="{{index}}">
      <view class="subtitle">
        <view style="color:red;display:flex;flex-direction:row;">供应商名称：
          <view style="color:black;display:flex;flex-direction:row;" >{{supplier_name}}</view>
        </view>
        物料名称：{{material_name}}
        <text decode="{{true}}">\n</text>
        计划装车数量（个）：{{item.scheduledAmount}}
        <text decode="{{true}}">\n</text>
        实际装车数量（个）：{{item.realAmount}}
        <text decode="{{true}}">\n</text>
        装车时间：{{item.loadingTime}}
        <text decode="{{true}}">\n</text>
        单位：{{item.unit}}
        <text decode="{{true}}">\n</text>
        单位数量：{{item.unitAmount}}
        <text decode="{{true}}">\n</text>
        状态：{{item.state==0 ?'待装车':'' + item.state==1 ?'部分装车完成':'' + item.state==2 ?'全部装车完成':''}}
        <text decode="{{true}}">\n</text>
        备注：{{item.comment}} 
      </view>
      <view class="line">' '</view>
    </view>
	</view>
</view>
</form>


